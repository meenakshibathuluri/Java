import java.util.Scanner;

public class RemoveNumberAndSpecialCharaters {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("enter the sentence");
        String sentence = sc.nextLine();
        String result = removeNumberAndSpecialCharacters(sentence);
        System.out.println(result);
    }
    static  String removeNumberAndSpecialCharacters(String sentence) {
        String res = "";
        for (int i=0;i<sentence.length();i++) {
            if ((sentence.charAt(i) >= 'a' && sentence.charAt(i) <= 'z') || (sentence.charAt(i) >= 'A' && sentence.charAt(i) <= 'Z') || sentence.charAt(i) == ' ') {
                res += sentence.charAt(i);
            }
        }
        return res;
    }
}
